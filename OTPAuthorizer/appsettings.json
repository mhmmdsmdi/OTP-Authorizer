{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "Otp": {
    "EncryptBeforeStore": true,
    "Channels": {
      "sms": {
        "CodeLength": 6,
        "StartWithZero": false,
        "MaxRepeatedDigits": 2,
        "ExpirationInMinutes": 2
      },
      "email": {
        "CodeLength": 8,
        "StartWithZero": true,
        "MaxRepeatedDigits": 3,
        "ExpirationInMinutes": 5
      }
    }
  }
}
